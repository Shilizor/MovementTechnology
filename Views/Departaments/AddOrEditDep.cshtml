@using Microsoft.AspNetCore.Identity
@using MovementTechnology.Data
@inject UserManager<User> UserManager
@model MovementTechnology.Data.Departament
@{
    var user = await UserManager.GetUserAsync(User);
    Layout = null;
}

<form class="login_form" asp-action="AddOrEditDep" asp-route-id="@Model.Id" onsubmit="return AddOrEditDep(this);">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="IdUser" />
    <input type="hidden" asp-for="Technics" />
    <input type="hidden" asp-for="Staffs" />
    <div>
        <label asp-for="Name"></label><br/>
        <input asp-for="Name" placeholder="Введите Название отдела" class="form_inptext"/><br/>
        <span asp-validation-for="Name"></span>
    </div>
    
    <div class="login_btn">
        <input type="submit" value="Submit" class="form_submit_btn"/>
    </div>
</form>